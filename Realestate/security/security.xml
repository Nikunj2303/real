<?xml version="1.0" encoding="utf-8" ?>

<odoo>

    <record model="ir.module.category" id="module_category_realestate">
        <field name="name">Real Estate</field>
        <field name="description">Category For Real Estate</field>
        <field name="sequence">40</field>
    </record>

    <record id="group_estate_name" model="res.groups">
        <field name="name">Estate</field>
        <field name="category_id" ref="module_category_realestate"/>
        <field name="implied_ids" eval="[(4, ref('group_estate_agent'))]"/>
    </record>

    <record id="group_estate_agent" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="module_category_realestate"/>
    </record>

    <record id="real_estate_rule" model="ir.rule">
        <field name="name">Employee multi company rule</field>
        <field name="model_id" ref="model_real_estate_property"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('Realestate.group_estate_agent'))]"/>
    </record>

</odoo>